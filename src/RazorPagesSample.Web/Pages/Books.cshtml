@page
@model MyApp.Namespace.BooksModel
@{
    ViewData["Title"] = "Books";
}

<div class="text-center">
    <h1 class="display-4">Books</h1>
    
    <div class="container">
        <div class="row">
            @foreach (var book in Model.Books)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img asp-append-version="true" class="bd-placeholder-img card-img-top" width="50%" height="200" src="~/images/@book.Image"/>
                        <div class="card-body">
                            <p class="card-text">@book.Title</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-page="BookDetail" asp-route-id="@book.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                </div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
